@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Find a random dish and how to make it</h1>
    <br />
    <br />
    <a class="btn btn-primary" asp-page-handler="loadmeal">Press to Find Random Dish</a>
    <br /><br />
          <h3>Dish: @Model.strMeal</h3>
          <h4>Category: @Model.strCategory</h4>
    <img id="mealImage" src="@Model.mealUrl" style="height: 300px; width: auto; max-width: 500px" />
    <br /><br /><br />
                <h4>YouTube Video</h4>
    <br /><br />
    <iframe width="420" height="315"
            src="@Model.youtubeUrl">
    </iframe>
</div>
